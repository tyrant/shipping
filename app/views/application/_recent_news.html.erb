<div id="recent_news">
  <h3>Recent News</h3>
  <ul>
    <% recent_news.each do |article| %>
      <li>
        <%= link_to article[:label], "/news/#{article[:slug]}" %>, <%= article[:date] %>
      </li>
    <% end %>
    <%= link_to '/news' do %>
      <li class="bg-info more">
        More News
      </li>
    <% end %>
  </ul>
</div>