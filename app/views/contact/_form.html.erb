<%= form_tag '/contact', class: 'feedback-form' do %>
  <div class="form-group">
    <%= label_tag :name, 'Name' %>
    <%= text_field_tag :name, nil, class: 'form-control', placeholder: 'Enter your name' %>
  </div>
  <div class="form-group">
    <%= label_tag :email, 'Email' %>
    <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Enter your email' %>
  </div>
  <div class="form-group">
    <%= label_tag :phone, 'Phone number' %>
    <%= telephone_field_tag :phone, nil, class: 'form-control', placeholder: 'Enter your phone number' %>
  </div>
  <div class="form-group">
    <%= label_tag :message, 'Message' %>
    <%= text_area_tag :message, nil, class: 'form-control', placeholder: 'Enter your message', rows: 4 %>
  </div>
  <div class="form-group">
    <%= submit_tag 'Submit', class: 'btn btn-submit btn-primary' %>
  </div>
<% end %>